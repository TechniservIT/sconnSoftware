<Window x:Class="sconnRem.ChangePasswordWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:prop="clr-namespace:sconnRem.Properties" 
        Title="changePasswordWnd" Height="221" Width="150">
    <Grid>
        <TextBox x:Name="InputPasswordTb" HorizontalAlignment="Left" Height="23" Margin="10,51,-1,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="SavePasswordBtn" Content="{x:Static prop:Resources.btnSaveDesc }" HorizontalAlignment="Left" Margin="22,158,0,0" VerticalAlignment="Top" Width="91" Height="26" Click="savePasswordBtn_Click"/>
        <Label Content="{x:Static prop:Resources.lblChangePasswordDesc }" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="InputConfirmTb" HorizontalAlignment="Left" Height="23" Margin="10,119,-1,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="{x:Static prop:Resources.lblChangePasswordRepeatDesc }" HorizontalAlignment="Left" Margin="10,88,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
