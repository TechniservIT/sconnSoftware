@using sconnConnector.POCO.Config.sconn
@model iotDash.Models.AlarmSystemAuthorizedDevicesModel

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}


<div class="panel panel-primary">
    <div class="panel-heading text-center">
        <h2>Authorized Devices</h2>
    </div>

    <div class="panel-body">


        <div class="row">
            <div class="col-md-12">
                @Html.Partial("~/Views/Shared/EditorTemplate/ToolbarMenu.cshtml")
            </div>
        </div>

        <div class="row">
            <div class="table-responsive">

                <table class="table">
                    <tr>
                        <th>Serial</th>
                        <th>Allowed from</th>
                        <th>Allowed until</th>
                        <th>Enabled</th>
                    </tr>


                    @foreach (sconnAuthorizedDevice d in Model.AuthorizedDevices)
            {
                        <tr id="@d.Id.ToString()" class="rowRecord row-normal">

                            <td> @d._Serial </td>
                            <td> @d._AllowedFrom</td>
                            <td> @d._AllowedUntil</td>
                            <td> @d._Enabled</td>

                        </tr>
                    }

                </table>
            </div>
        </div>

    </div>

</div>

